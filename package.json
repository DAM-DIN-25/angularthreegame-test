{
  "name": "three-game",
  "version": "1.0.9",
  "main": "main.js",
  "build": {
    "appId": "org.iescamp.din.three-game",
    "productName": "ThreeGame",
    "files": [
      "dist/ThreeGame/**/*",
      "main.js",
      "package.json"
    ]
  },
  "win": {
    "target": [
      "nsis"
    ]
  },
  "linux": {
    "target": [
      "AppImage"
    ]
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint",
    "dev": "npm-run-all --parallel electron start",
    "electron": "wait-on tcp:4200 && ng build --base-href ./ && electron .",
    "package": "ng build && electron-builder",
    "package-win": "ng build && electron-builder --win nsis portable --publish never",
    "package-linux": "ng build && electron-builder build --x64 -l appimage --publish never"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@10.9.3",
  "dependencies": {
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "@capacitor/android": "^8.0.1",
    "@capacitor/core": "latest",
    "@dimforge/rapier3d-compat": "^0.19.0",
    "@monogrid/gainmap-js": "^3.4.0",
    "@pmndrs/cannon-worker-api": "^2.4.0",
    "@pmndrs/vanilla": "^1.25.0",
    "angular-three": "^4.0.0",
    "angular-three-cannon": "^4.0.0",
    "angular-three-rapier": "^4.0.0",
    "angular-three-soba": "^4.0.0",
    "camera-controls": "^2.10.0",
    "cannon-es": "^0.20.0",
    "cannon-es-debugger": "^1.0.0",
    "hls.js": "^1.6.0",
    "maath": "^0.10.8",
    "meshline": "^3.3.0",
    "ngxtension": "^7.0.0",
    "rxjs": "~7.8.0",
    "stats-gl": "^3.8.0",
    "three": "^0.182.0",
    "three-custom-shader-material": "^6.4.0",
    "three-mesh-bvh": "^0.9.0",
    "three-stdlib": "^2.36.0",
    "troika-three-text": "^0.52.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.1",
    "@angular/cli": "^21.0.1",
    "@angular/compiler-cli": "^21.0.0",
    "@capacitor/angular": "^2.0.3",
    "@capacitor/cli": "latest",
    "@types/three": "^0.182.0",
    "angular-eslint": "21.1.0",
    "angular-three-plugin": "^4.0.9",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9.39.1",
    "jsdom": "^27.1.0",
    "npm-run-all": "^4.1.5",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.47.0",
    "vitest": "^4.0.8",
    "wait-on": "^9.0.3"
  }
}
